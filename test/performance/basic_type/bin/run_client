#!/bin/bash

OPERARTION=echoString
BASEDON=Time
AMOUNT=30
PACKETSIZE=1
THREADS=0

cd .. 

for i in $@
do 
  if [ "$i" = "-Operartion" ]
  then
	OPERARTION=$2
  fi

  if [ "$i" = "-BasedOn" ]
  then
	BASEDON=$2
  fi

  if [ "$i" = "-Amount" ]
  then
	AMOUNT=$2
  fi

  if [ "$i" = "-PacketSize" ]
  then
        PACKETSIZE=$2
  fi

  if [ "$i" = "-Threads" ]
  then
	THREADS=$2
  fi

  shift

done

ant client -Dceltix.running.time=$AMOUNT -Dceltix.operation=$OPERARTION -Dceltix.basedon=$BASEDON -Dceltix.packet.size=$PACKETSIZE -Dceltix.threads=$THREADS


                   
