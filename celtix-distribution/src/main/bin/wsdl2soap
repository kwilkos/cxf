#!/bin/sh
# run the Celtix wsdl2soap tool 
#

me=`basename $0`
celtix_home=`dirname $0`/..

celtix_jar=$celtix_home/lib/celtix.jar

if [ ! -f $celtix_jar ]; then 
    echo "unable to find celtix.jar in $celtix_home/lib"
    exit 1
fi 

#
# add the jdk's tools.jar to the classpath
#

sun_tool_path=""
if [ ! `uname` = 'Darwin' ]; then
    sun_tool_path=${JAVA_HOME}/lib/tools.jar
    if [ ! -f $sun_tool_path ]; then
	echo "Please set JAVA_HOME to point a J2SE 5.0 Development Kit"
	exit 1
    fi
fi 

log_config=$celtix_home/etc/logging.properties 

celtix_classpath=${celtix_jar}:${CLASSPATH}:${sun_tool_path}

$JAVA_HOME/bin/java -cp ${celtix_classpath} -Djaxws.home=$celtix_home -Djava.util.logging.config.file=$log_config org.objectweb.celtix.tools.WSDLToSoap "$@"





