<?xml version="1.0" encoding="UTF-8"?>
<cm:config 
    xmlns:cm="http://celtix.objectweb.org/configuration/metadata" 
    xmlns:ct="http://celtix.objectweb.org/configuration/types" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    xsi:schemaLocation="http://celtix.objectweb.org/configuration/metadata
    http://celtix.objectweb.org/configuration/metadata.xsd"
    namespace="http://celtix.objectweb.org/bus/bus-config">

   <!-- configuration metadata for component Bus  -->
   
    <cm:configImport location="schemas/configuration/std-types.xsd" namespace="http://celtix.objectweb.org/configuration/types"/>

    <cm:configItem>
        <cm:name>resourceResolvers</cm:name>
        <cm:type>ct:stringListType</cm:type>
        <cm:description>
	  Specifies (by classname) the ResourceResolvers that are to be
	  registered with the bus' ResourceManager
        </cm:description>
        <cm:lifecyclePolicy>bus</cm:lifecyclePolicy>    
        <ct:stringListValue>
            <ct:item>org.objectweb.celtix.resource.ClasspathResolver</ct:item>
            <ct:item>org.objectweb.celtix.resource.ClassLoaderResolver</ct:item>
            <ct:item>org.objectweb.celtix.bus.jaxws.WebContextResourceResolver</ct:item>
	</ct:stringListValue>
    </cm:configItem>

    <cm:configItem>
        <cm:name>servicesMonitoring</cm:name>
        <cm:type>xs:boolean</cm:type>
        <cm:description>
	  Used to enable or disable services performance monitoring
        </cm:description>
        <cm:lifecyclePolicy>bus</cm:lifecyclePolicy>    
        <std-types:booleanValue xmlns:std-types="http://celtix.objectweb.org/configuration/types">false</std-types:booleanValue>        
    </cm:configItem>
    
</cm:config>
