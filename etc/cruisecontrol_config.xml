<cruisecontrol>
    <project name="celtix">
        <bootstrappers>
            <svnbootstrapper localWorkingCopy="/x1/celtix_cruisecontrol/celtix"/>
        </bootstrappers>
        <modificationset quietperiod="120">
            <svn localWorkingCopy="/x1/celtix_cruisecontrol/celtix/trunk"/>
        </modificationset>
        <listeners>
            <currentbuildstatuslistener file="/x1/celtix_cruisecontrol/logs/celtix/currentbuild.txt"/>
        </listeners>
        <schedule interval="120">
            <ant antscript="/x1/celtix_cruisecontrol/celtix/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="build.xml" target="cruisecontrol.build"
                 antWorkingDir="/x1/celtix_cruisecontrol/celtix/trunk" uselogger="true" timeout="1800">
            </ant>
            <!--maven2 mvnscript="/x1/celtix_cruisecontrol/celtix/trunk/maven/bin/mvn"
                 pomfile="/x1/celtix_cruisecontrol/celtix/trunk/pom.xml" goal="clean|install"  timeout="1800">
            </maven2-->
        </schedule>
        <log dir="/x1/celtix_cruisecontrol/logs/celtix">
            <merge dir="/x1/celtix_cruisecontrol/celtix/trunk/target/surefire-reports"/>
        </log>
        <publishers>
            <artifactspublisher dir="/x1/celtix_cruisecontrol/celtix/trunk/target/surefire-reports"
                subdirectory="test-reports"
                dest="/x1/celtix_cruisecontrol/logs/celtix"/>

            <htmlemail mailhost="amereast-ems2.iona.com"
                returnaddress="eng-celtix-dev@iona.com"
                returnname="Celtix Build Machine"
                defaultsuffix="@iona.com"
                buildresultsurl="http://pdceltix.boston.amer.iona.com:8080/cruisecontrol/buildresults/celtix"
                skipusers="false"
                subjectprefix="Celtix Cruisecontrol Build Result: "
                css="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
                xsldir="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/xsl"
                logdir="/x1/celtix_cruisecontrol/logs/celtix"
                >
                <always address="eng-celtix-dev@iona.com" />
                <failure address="eng-celtix-dev@iona.com" />
            </htmlemail>
        </publishers>
    </project>
    <project name="celtix-distribution">
        <bootstrappers>
            <svnbootstrapper localWorkingCopy="/x1/celtix_cruisecontrol/celtix"/>
        </bootstrappers>
        <modificationset quietperiod="120">
            <svn localWorkingCopy="/x1/celtix_cruisecontrol/celtix/trunk"/>
        </modificationset>
        <listeners>
            <currentbuildstatuslistener file="/x1/celtix_cruisecontrol/logs/celtix-distribution/currentbuild.txt"/>
        </listeners>
        <schedule>
            <ant antscript="/x1/celtix_cruisecontrol/celtix/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="build.xml" target="cruisecontrol.build.distribution"
                 antWorkingDir="/x1/celtix_cruisecontrol/celtix/trunk" uselogger="true"
                 time="0900" timeout="3600">
            </ant>
            <ant antscript="/x1/celtix_cruisecontrol/celtix/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="build.xml" target="cruisecontrol.build.distribution"
                 antWorkingDir="/x1/celtix_cruisecontrol/celtix/trunk" uselogger="true"
                 time="2100" timeout="3600">
            </ant>
        </schedule>
        <log dir="/x1/celtix_cruisecontrol/logs/celtix-distribution"/>
        <publishers>
            <artifactspublisher file="/x1/celtix_cruisecontrol/celtix/trunk/distribution/build.out" dest="/x1/celtix_cruisecontrol/logs/celtix-distribution"/>
            <artifactspublisher file="/x1/celtix_cruisecontrol/celtix/trunk/distribution/build.out.clean" dest="/x1/celtix_cruisecontrol/logs/celtix-distribution"/>

            <htmlemail mailhost="amereast-ems2.iona.com"
                returnaddress="eng-celtix-dev@iona.com"
                returnname="Celtix Build Machine"
                defaultsuffix="@iona.com"
                buildresultsurl="http://pdceltix.boston.amer.iona.com:8080/cruisecontrol/buildresults/celtix-distribution"
                skipusers="false"
                subjectprefix="Celtix Distribution Cruisecontrol Build Result: "
                css="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
                xsldir="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/xsl"
                logdir="/x1/celtix_cruisecontrol/logs/celtix-distribution"
                >
                <always address="eng-celtix-dev@iona.com" />
                <failure address="eng-celtix-dev@iona.com" />
            </htmlemail>
        </publishers>
    </project>    
    <project name="celtix-cpitest">
        <bootstrappers>
            <svnbootstrapper localWorkingCopy="/x1/celtix_cruisecontrol/celtix"/>
            <svnbootstrapper localWorkingCopy="/x1/celtix_cruisecontrol/sandbox/celtix-cpi"/>
        </bootstrappers>
        <modificationset quietperiod="60">
            <buildstatus logdir="/x1/celtix_cruisecontrol/logs/celtix-distribution"/>
        </modificationset>
        <listeners>
            <currentbuildstatuslistener file="/x1/celtix_cruisecontrol/logs/celtix-cpitest/currentbuild.txt"/>
        </listeners>
        <schedule interval="120">
            <ant antscript="/x1/celtix_cruisecontrol/celtix/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="/x1/celtix_cruisecontrol/sandbox/celtix-cpi/cpi-source/build.xml" target="cpitest"
                 antWorkingDir="/x1/celtix_cruisecontrol/sandbox/celtix-cpi/cpi-source" 
                 uselogger="true" timeout="1800">
                    <property name="BINARY_KIT_DIR" value="/x1/celtix_cruisecontrol/celtix/trunk/distribution/target"/>
            </ant>
        </schedule>
        <log dir="/x1/celtix_cruisecontrol/logs/celtix-cpitest">
            <merge dir="/x1/celtix_cruisecontrol/sandbox/celtix-cpi/cpi-source/xsyte_result"/>
        </log>
        <publishers>
            <antpublisher antscript="/x1/celtix_cruisecontrol/celtix/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 antworkingdir="/x1/celtix_cruisecontrol/sandbox/celtix-cpi/cpi-source"
                 buildfile="cpi-report.xml"
                 target="publish">
                <property name="LOG_DIR" value="/x1/celtix_cruisecontrol/logs/celtix-cpitest"/>
            </antpublisher>
            <htmlemail mailhost="amereast-ems2.iona.com"
                returnaddress="eng-celtix-dev@iona.com"
                returnname="Celtix Build Machine"
                defaultsuffix="@iona.com"
                buildresultsurl="http://pdceltix.boston.amer.iona.com:8080/cruisecontrol/buildresults/celtix-cpitest"
                skipusers="true"
                subjectprefix="Celtix CPI-Test Cruisecontrol Build Result: "
                css="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
                xsldir="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/xsl"
                logdir="/x1/celtix_cruisecontrol/logs/celtix-cpitest"
                >
                <always address="eng-celtix-dev@iona.com" />
                <failure address="eng-celtix-dev@iona.com" />
            </htmlemail>
        </publishers>
    </project>


</cruisecontrol>
